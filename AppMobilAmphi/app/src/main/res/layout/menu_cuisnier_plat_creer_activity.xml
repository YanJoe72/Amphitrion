<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageAmphitryon"
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/amphitryon"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/editTextId"
        android:layout_width="322dp"
        android:layout_height="39dp"
        android:layout_weight="5"
        android:layout_marginBottom="350dp"
        android:gravity="top"
        android:hint="ID du plat :"
        app:layout_constraintEnd_toStartOf="@+id/Creer_Plat"
        app:layout_constraintStart_toEndOf="@+id/Supprimer_Plat"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <EditText
        android:id="@+id/editTextNom"
        android:layout_width="322dp"
        android:layout_height="39dp"
        android:layout_weight="5"
        android:layout_marginBottom="270dp"
        android:gravity="top"
        android:inputType="textPassword"
        android:hint="Nom du plat :"
        app:layout_constraintEnd_toStartOf="@+id/Creer_Plat"
        app:layout_constraintStart_toEndOf="@+id/Supprimer_Plat"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <EditText
        android:id="@+id/editTextDescription"
        android:layout_width="322dp"
        android:layout_height="39dp"
        android:layout_weight="5"
        android:layout_marginBottom="270dp"
        android:gravity="top"
        android:inputType="textPassword"
        android:hint="Description du plat :"
        app:layout_constraintEnd_toStartOf="@+id/Creer_Plat"
        app:layout_constraintStart_toEndOf="@+id/Supprimer_Plat"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/Creer_Plat"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="90dp"
        android:text="CrÃ©er plat"
        app:layout_constraintEnd_toStartOf="@+id/Supprimer_Plat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>



    <Button
        android:id="@+id/Supprimer_Plat"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        android:text="Supprimer Plat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Creer_Plat"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>